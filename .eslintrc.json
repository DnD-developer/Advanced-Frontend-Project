{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"root": true,
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/strict",
		"plugin:@typescript-eslint/stylistic",
		"plugin:react-redux/recommended",
		"plugin:react-hooks/recommended",
		"plugin:react/jsx-runtime",
		"plugin:i18next/recommended",
		"plugin:jest-dom/recommended",
		"plugin:storybook/recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"i18next",
		"react",
		"jest-dom",
		"@typescript-eslint",
		"react-hooks",
		"react-redux",
		"react-refresh",
		"@arthurgeron/react-usememo"
	],
	"rules": {
		"@arthurgeron/react-usememo/require-usememo": [2],
		"@arthurgeron/react-usememo/require-memo": "error",
		"react-refresh/only-export-components": "error",
		"react-hooks/exhaustive-deps": "error",
		"@typescript-eslint/prefer-nullish-coalescing": "off",
		"@typescript-eslint/strict-boolean-expressions": "off",
		"@typescript-eslint/consistent-type-definitions": ["error", "type"],
		"@typescript-eslint/naming-convention": "off",
		"react/display-name": "off",
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"no-console": ["warn"],
		"react/prop-types": "off",
		"i18next/no-literal-string": [
			"error",
			{
				"mode": "jsx-only",
				"makrupOnly": true,
				"jsx-attributes": {
					"exclude": [
						"defaultView",
						"data-testid",
						"className",
						"classNames",
						"style",
						"type",
						"height",
						"width",
						"direction",
						"gap",
						"justify",
						"align",
						"role",
						"anchor",
						"as"
					]
				}
			}
		]
	},
	"globals": {
		"__IS_DEV__": true,
		"__IS_ANALYZE__": true,
		"__BASE_URL__": true,
		"__PROJECT__": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"overrides": [
		{
			"files": [
				"**/src/**/*.test.{ts,tsx}",
				"**/src/**/*.decorator.{ts,tsx}",
				"**/src/**/*.stories.{ts,tsx}",
				"**/*.mock.{ts,tsx}"
			],
			"rules": {
				"i18next/no-literal-string": "off",
				"@arthurgeron/react-usememo/require-usememo": "off",
				"@arthurgeron/react-usememo/require-memo": "off"
			}
		}
	]
}
